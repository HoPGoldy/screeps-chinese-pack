{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "Node", 
        "outDir": "dist/",
        "baseUrl": "./src",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [ "./*" ]
        }
    },
    "include": [ "src/**/*.ts", "test/**/*.ts" ],
    "exclude": [ "node_modules" ]
}